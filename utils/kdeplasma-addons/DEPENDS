depends kdelibs

optional_depends libdbusmenu-qt  "-DWITH_DBusMenuQt=1"    "-DWITH_DBusMenuQt=0"    "for qt dbus menu spec support"
optional_depends kde-workspace   "-DWITH_KDE4Workspace=1" "-DWITH_KDE4Workspace=0" "to use various libs/apps from kdebase-workspace"
optional_depends kdepimlibs      "-DWITH_KdepimLibs=1"    "-DWITH_KdepimLibs=0"    "for kdepim library support"
optional_depends libkexiv2       "-DWITH_Kexiv2=1"        "-DWITH_Kexiv2=0"        "for accessing image metadata support"
optional_depends attica          "-DWITH_LibAttica=ON"    "-DWITH_LibAttica=OFF"   "for Open Collaboration support"
optional_depends marble          "-DWITH_Marble=1"        "-DWITH_Marble=0"        "to enable desktop globe wallpaper for plasma"
optional_depends nepomuk-widgets "-DWITH_Nepomuk=1"       "-DWITH_Nepomuk=0"       "for indexing support"
optional_depends qca2            "-DWITH_QCA2=ON"         "-DWITH_QCA2=OFF"        "for qca support"
optional_depends qjson           "-DWITH_QJSON=1"         "-D-DWITH_QJSON=0"       "for qt JavaScript Object Notation support"
optional_depends libqalculate    "-DWITH_Qalculate=ON"    "-DWITH_Qalculate=OFF"   "for multi-purpose desktop calculator support"
optional_depends qoauth          "-DWITH_QtOAuth=1"       "-DWITH_QtOAuth=0"       "required to build the Plasma Microblog DataEngine"
optional_depends qwt             "-DWITH_Qwt=ON"          "-DWITH_Qwt=OFF"         "for qwt support"
optional_depends scim            "-DBUILD_scim=ON"        "-DBUILD_scim=OFF"       "for multibyte input Plasmoid support"
